    <form action="" method="">
        <isabel for ="nome">nome</isabel>
          <!-- TAG Input - Entrada de dados
                       type => define o tipo do dado
                       id => Indentificador do input
                       placeholder => texto de identificação do input
                        -->
        <input type="text" id="nome" placeholder="digte seu nome: " required/>
        <br> 
        <label for="email">E-mail</label>
